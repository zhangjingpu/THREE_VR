<?xml version="1.0"?>
<VR id="1">
  <!--配置户型的所有全景图（唯一）-->
  <panoramas>
    <!--配置全景图的路径，一个户型中可以有多个场景
        node ：全景图的编号（唯一）
        url ：全景图的路径 （相对路径）-->
    <panorama node="1" url="img/VR/2016-9-20keting-qj.jpg">
      <!--全景图中的热点，一个场景中可以有多个热点-->
      <sprites>
        <!--配置每个热点的对应信息
            type：热点的类型 1 表示场景切换 2 表示查看柜体
            pos ：热点在三维场景中的位置坐标
            img_url : 热点的图片路径
            nextNode：表示热点链接的下一个场景（type= 1时，包含这个属性）
            url : 对应柜体展示的路径（type= 2 时，包含这个属性）-->
        <sprite type="1" pos="-285.7397448715704,-29.392684292767772,277.53946340019417" nextNode="4" img_url="img/sprite/forward.png" name="123"/>
        <sprite type="1" pos="-310.39564006937553,-113.60817217010955,224.73158992712663" nextNode="3" img_url="img/sprite/forward_right.png" name="123"/>
        <sprite type="2" pos="-390.9257313655525,35.76029194619428,74.09076971814397" url="http://www.itthome.com/3DCloudDesign/3DF/furniture.html?id=Z-Y-X-J-00386&amp;type=2" img_url="img/sprite/sprite_01.png" name="123"/>
      </sprites>
    </panorama>
    <panorama node="2" url="img/VR/2016-9-23woshi-qj.jpg">
      <sprites>
        <sprite type="1" pos="330.2152227252353,-33.4392608299774,222.23100519043626" nextNode="3" img_url="img/sprite/forward.png" name="123"/>
      </sprites>
    </panorama>
    <panorama node="3" url="img/VR/keting-qj.jpg">
      <sprites>
        <sprite type="1" pos="-139.7661977415359,-88.43303640997281,-363.4496708092633" nextNode="2" img_url="img/sprite/forward.png" name="123"/>
        <sprite type="1" pos="116.5636914408219,-95.22977013911267,370.3436818741659" nextNode="4" img_url="img/sprite/forward.png" name="123"/>
        <sprite type="1" pos="352.4082837608018,-77.18185502032226,-171.0037435873699" nextNode="1" img_url="img/sprite/forward.png" name="123"/>
      </sprites>
    </panorama>
    <panorama node="4" url="img/VR/2016-9-28shufang.jpg">
      <sprites>
        <sprite type="1" pos="62.60188880743695,-70.47215737000465,-387.9481581300638" nextNode="3" img_url="img/sprite/forward.png" name="123"/>
        <sprite type="2" pos="-398.612421202302,21.506822902993818,10.353005994208925" img_url="img/sprite/sprite_01.png" url="http://www.itthome.com/3DCloudDesign/3DF/furniture.html?id=Z-A-7-00713&amp;type=1" name="123"/>
      </sprites>
    </panorama>
  </panoramas>
  <!--配置户型图（唯一）-->
  <map url="img/map/huxing5.jpg">
    <!--配置户型图上的热点，可以配置多个热点-->
    <sprites>
      <!--配置单个热点
          translate ：热点的相对位移
          nextNode：表示热点链接的下一个场景 -->
      <sprite translate="80px, 120px" nextNode="2" name="ewe"/>
      <sprite translate="190px, 120px" nextNode="1" name="ewr"/>
      <sprite translate="120px, 190px" nextNode="3" name="dskjf"/>
      <sprite translate="100px, 250px" nextNode="4" name="dsf"/>
    </sprites>
  </map>
</VR>

